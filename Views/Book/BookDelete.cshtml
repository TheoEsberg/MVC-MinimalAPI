@model BookDTO

@{
	ViewData["Title"] = "BookDelete";
}

<h1>Avadacadava</h1>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="BookDelete" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Id" class="control-form"></label>
				<input asp-for="Id" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Description" class="control-form"></label>
				<input asp-for="Description" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Author" class="control-form"></label>
				<input asp-for="Author" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Genre" class="control-form"></label>
				<input asp-for="Genre" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Year" class="control-form"></label>
				<input asp-for="Year" class="form-control" />
			</div>

			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input"
							asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
				</label>
			</div>

			<div class="form-group">
				<input type="submit" value="Delete" class="btn btn-danger" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="BookIndex">Back to List</a>
</div>


@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}